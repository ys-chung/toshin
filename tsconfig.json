{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "ts-node": {
    "swc": true,
    "esm": true
  },
  "include": ["src/**/*", "test/**/*"]
}
